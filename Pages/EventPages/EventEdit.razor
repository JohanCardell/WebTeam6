@inherits EventEditBase

@if(Event != null)
{
    <EditForm id="edit-event" OnValidSubmit="Update" Model="Event">
        <h3>Edit Event</h3>
        <div class="form-group row col-sm-10">
            <InputText id="edit-event-name" class="form-control" @bind-Value="Event.Name"></InputText>
        </div>
        <div class="form-group row col-sm-10">
            <InputTextArea id="edit-event-description" class="form-control" @bind-Value="Event.Description"></InputTextArea>
        </div>
        <div class="form-group row col-sm-10">
            <InputDate id="edit-event-start-time" class="form-control" @bind-Value="Event.StartTime"></InputDate>
        </div>
        <div class="form-group row col-sm-10">
            <InputDate id="edit-event-end-time" class="form-control" @bind-Value="Event.EndTime"></InputDate>
        </div>
        <div class="form-group row col-sm-10">
            <input type="submit" class="btn btn-primary" value="Save" />
            @*<input type="submit" class="btn btn-danger" value="Cancel" @onclick=@(e => Editing = false)/>*@
        </div>
        @if (Saved)
        {
            <h3>Saved!</h3>
        }
    </EditForm>
}