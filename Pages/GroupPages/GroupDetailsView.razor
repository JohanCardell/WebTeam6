@page "/groupdetails/{id}"
@inherits GroupDetailsBase

<h3>@GroupObject.Name</h3>
<div class="container">
    <div class="row">
        <div class="col-lg-2">
            <p>Message board</p>
            <!-- Content -->
        </div>
        <div class="col-lg-5">
            <p>Events</p>
            <WebTeam6.Pages.EventPages.EventList Group="GroupObject" Events="GroupObject.Events"/>
            <!-- Content -->
        </div>
        <div class="col-lg-5">
            <GroupMembersView GroupObject="GroupObject" GroupMembers="GroupMembers" FilteredUsers="FilteredUsers" DataChanged="DataChanged"></GroupMembersView>
        </div>
    </div>
</div>

